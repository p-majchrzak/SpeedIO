<Window x:Class="SpeedIO.Widoki.Zegnaj"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeedIO.Widoki"
        mc:Ignorable="d"
        Title="Żegnaj" Height="200" Width="400" ResizeMode="NoResize">
    <Window.Resources>
        <LinearGradientBrush x:Key="TitleGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4B82FF" Offset="0.0"/>
            <GradientStop Color="#2D4370" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Resources>
    <Grid>
        <TextBlock Text="Żegnaj!" FontWeight="Bold" FontSize="70" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock.Foreground>
                <StaticResource ResourceKey="TitleGradient"/>
            </TextBlock.Foreground>
            <TextBlock.Effect>
                <DropShadowEffect Color="#BAC2DC" Direction="270" ShadowDepth="10" Opacity="0.6"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
